<table class="table">
	<tr><%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', class: "attachment user profile_image", fallback: "no_image.jpg", alt: "profile_image" %></tr>
	<tbody>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>Follow</th>
			<th>
				<a href="<%= user_follows_path(user) %>">
					<%= user.followings.count %>
				</a>
			</th>
		</tr>
		<tr>
			<th>Follower</th>
			<th>
				<a href="<%= user_followers_path(user) %>">
					<%= user.followers.count %>
				</a>
			</th>
		</tr>
	</tbody>
</table>

<div class="row">
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>